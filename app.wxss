page {
  background-color: #fafafa;
}

/**
 * Sizing
 */
.fw {
  width: 100%;
}

.fvw {
  width: 100vw;
}

.fh {
  height: 100%;
}

.fvh {
  height: 100vh;
}

/**
 * Flex
 */

.d-flex-column {
  display: flex !important;
  flex-direction: column;
}

.d-flex-row {
  display: flex !important;
  flex-direction: row;
}

.justify-content-start {
  justify-content: flex-start;
}

.justify-content-end {
  justify-content: flex-end;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-between {
  justify-content: space-between;
}

.justify-content-around {
  justify-content: space-around;
}

.justify-content-evenly {
  justify-content: space-evenly;
}

.align-items-start {
  align-items: start;
}

.align-items-end {
  align-items: end;
}

.align-items-center {
  align-items: center;
}

/**
 * Spacing
 */

.container {
  box-sizing: border-box;
  padding: 7px 15px;
}

.hairline-row {
  padding-left: 7px;
  padding-right: 7px;
}

.hairline-column {
  padding-top: 15px;
  padding-bottom: 15px;
}

.hairline-row-bold {
  padding-left: 14px;
  padding-right: 14px;
}

.hairline-column-bold {
  padding-top: 30px;
  padding-bottom: 30px;
}

/**
 * Colors
 */
.bgcol-primary {
  background: #d1233e;
}

.bgcol-light {
  background: #fafafa;
}

.bgcol-transparent {
  background: none;
}

.col-primary {
  color: #d1233e;
}

/**
 * Font
 */
 .descriptive {
   font-size: 11pt;
   color: #b2b2b2;
   text-transform: uppercase;
 }

 label {
   font-size: 11pt;
   color: black;
   text-transform: capitalize;
 }

 /**
  * Animated
  */
.animated {
  -webkit-transition-duration: 0.3s;
  transition-duration: 0.3s;
  -webkit-transition-property: transform;
  transition-property: transform;
  -webkit-transition-timing-function: ease-out;
  transition-timing-function: ease-out;
}

/** Form **/
.form-header {
    padding: 30px 40px;
}

.form-footer{
    padding-bottom: 10px;
    text-align: center;
}

.form-title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.form-description {
    margin-top: 5px;
    color: #b2b2b2;
    text-align: left;
    font-size: 11pt;
}

.form-group {
  padding: 7px 0;
}

.form-button-wrapper {
  box-sizing: border-box;
  padding: 42px 30px;
}

.form-button {
  background-color: #d1233e !important;
  color: white !important;
  overflow: hidden !important;
  border-radius: 5px !important;
  text-transform: capitalize;
}

.form-steps-wrapper {
  box-sizing: border-box;
  padding: 40px;
}

.form-cell-group-title {
  font-size: 11pt;
  color: #b2b2b2;
  padding: 0 15px;
  margin: 7px 0;
}

.form-checkout-pricetag {
  font-weight: bold;
}

.form-checkout-pricetag-unit {
  font-size: 20pt;
  padding-right: 7px;
}

.form-checkout-pricetag-amount {
  font-size: 32pt;
}

.form-checkout-title {
  font-size: 12pt;
  color: #88888888;
}

.form-checkout-method {
  padding-top: 45px;
  margin-bottom: 15px;
}

.form-checkout-card-detail {
  overflow: hidden;
  margin-bottom: 30px;
  max-height: 0;
  transition: .5s ease-in-out;
  -webkit-transition: .5s ease-in-out;
}

.form-success-icon {
  padding: 40px;
}

.form-success-header {
  font-size: 16pt;
  color: black;
  font-weight: bold;
}

.form-success-direction {
  font-size: 11pt;
  color: #b2b2b2;
}