page {
  background-color: #fafafa;
}

/**
 * Sizing
 */
.fw {
  width: 100%;
}

.fvw {
  width: 100vw;
}

.fh {
  height: 100%;
}

.fvh {
  height: 100vh;
}

/**
 * Flex
 */

.d-flex-column {
  display: flex !important;
  flex-direction: column;
}

.d-flex-row {
  display: flex !important;
  flex-direction: row;
}

.justify-content-start {
  justify-content: flex-start;
}

.justify-content-end {
  justify-content: flex-end;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-between {
  justify-content: space-between;
}

.justify-content-around {
  justify-content: space-around;
}

.justify-content-evenly {
  justify-content: space-evenly;
}

.align-items-start {
  align-items: start;
}

.align-items-end {
  align-items: end;
}

.align-items-center {
  align-items: center;
}

/**
 * Spacing
 */

.container {
  box-sizing: border-box;
  padding: 7px 15px;
}

.hairline-row {
  padding-left: 7px;
  padding-right: 7px;
}

.hairline-column {
  padding-top: 15px;
  padding-bottom: 15px;
}

.hairline-row-bold {
  padding-left: 14px;
  padding-right: 14px;
}

.hairline-column-bold {
  padding-top: 30px;
  padding-bottom: 30px;
}

/**
 * Colors
 */
.bgcol-primary {
  background: #d1233e;
}

.bgcol-light {
  background: #fafafa;
}

.bgcol-transparent {
  background: none;
}

.col-primary {
  color: #d1233e;
}

/**
 * Font
 */
 .descriptive {
   font-size: 11pt;
   color: #b2b2b2;
   text-transform: uppercase;
 }

 label {
   font-size: 11pt;
   color: black;
   text-transform: uppercase;
 }

 /**
  * Animated
  */
.animated {
  -webkit-transition-duration: 0.3s;
  transition-duration: 0.3s;
  -webkit-transition-property: transform;
  transition-property: transform;
  -webkit-transition-timing-function: ease-out;
  transition-timing-function: ease-out;
}