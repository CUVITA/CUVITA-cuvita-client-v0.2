/* pages/antisocial-main/antisocial-main.wxss */
.poster-wrapper {
    display: flex;
    margin-top: 5%;
}

.poster{
    width: 70%;
}

.meta-wrapper{
    display: flex;
    margin-top: 5%;
}

.meta{
    padding: 5%;
    width: 60%;
    background-color: white;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
    border-radius: 10px;
}

.meta-title{
    font-family: Microsoft YaHei;
    font-style: normal;
    font-weight: bold;
    font-size: 22px;
    text-align: center;
    color: #D1213E;
}

.meta-description-wrapper{
    margin-top: 5%;
    margin-bottom: 5%;
}

.meta-description{
    font-family: Microsoft YaHei;
    font-style: normal;
    font-weight: normal;
    font-size: 15px;
    line-height: 5px;
    text-align: center;
    color: #000000;
}

.submit-button{
    width: 40%;
    margin-top: 10%;
    background-color: #D1213E;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 38px;
    color: white;
}

.form-button-wrapper{
    display: flex;
}
