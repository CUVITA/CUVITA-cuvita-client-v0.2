.nav {
  position: absolute;
}

.nav-button {
  width: 45rpx;
  height: 45rpx;
  margin: 7px 15px;
}

.nav-icon {
  width: 100%;
  height: 100%;
}

.hue {
  position: absolute;
  transition: background-position 1s ease;
  -webkit-transition: background-position 1s ease;
  background: linear-gradient(-45deg, #d1233e, #fa7921);
  background-size: 300%;
  z-index: -1;
  -webkit-animation: Gradient 10s ease infinite;
	animation: Gradient 10s ease infinite;
}

.qrcode-container {
  height: 85vw;
  width: 70vw;
  background: white;
  border-radius: 5px;
  padding: 30px;
  padding-bottom: 0;
  transition: all 0.2s ease;
  -webkit-transition: all 0.2s ease;
  -webkit-transform: perspective(1px) translateZ(0);
  transform: perspective(1px) translateZ(0);
}

.qrcode-container-hover {
  -webkit-transform: scale(1.02);
  transform: scale(1.02);
}

.qrcode-canvas {
  width: 70vw;
  height: 70vw;
}

.qrcode-brand {
  padding-top: 15px;
  font-size: 14pt;
  font-weight: bold;
  color: #2b2b2b;
}

.qrcode-label {
  color: #b2b2b2;
  font-size: 11pt;
  padding: 15px 0;
}

@-webkit-keyframes Gradient {
	0% {
		background-position: 0% 50%
	}
	50% {
		background-position: 100% 50%
	}
	100% {
		background-position: 0% 50%
	}
}

@keyframes Gradient {
	0% {
		background-position: 0% 50%
	}
	50% {
		background-position: 100% 50%
	}
	100% {
		background-position: 0% 50%
	}
}